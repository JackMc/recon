<%= javascript_pack_tag 'http_liveliness_scan_show' %>

<h2>Probes</h2>

<%= link_to 'View screenshots', screenshot_browser_view_target_scan_path(@target, @scan) %>
<p>
<%= check_box_tag(:only_up) %>
<%= label_tag(:only_up, 'Only UP') %>
</p>

<ul>
  <% @scan.http_probes.each do |probe| %>
    <li class="probe-<%= probe.state.downcase %>"><%= link_to probe.domain.fqdn, target_domain_url(@target, probe.domain) %> status: <%= link_to probe.state, target_http_probe_url(@target, probe) %> (<%= link_to 'screenshot', screenshot_target_http_probe_path(@target, probe), method: :post %>)</li>
  <% end %>
</ul>
